{{!< main}}

<section class="authorization">
    <form action="" class="authorization__form">
        <div class="authorization__content">
            {{> title title='Регистрация'}}
            {{> input 
                type='email'
                name='email'
                placeholder='Почта'
                class='authorization__input input'
            }}
            {{> input 
                type='text' 
                name='login'
                placeholder='Логин'
                class='authorization__input input'
            }}
            {{> input 
                type='text'
                name='first_name'
                placeholder='Имя'
                class='authorization__input input'
            }}
            {{> input 
                type='text'
                name='second_name'
                placeholder='Фамилия'
                class='authorization__input input'
            }}
            {{> input 
                type='phone'
                name='phone'
                placeholder='Телефон'
                class='authorization__input input'
            }}
            {{> input 
                type='password'
                name='password'
                placeholder='Пароль'
                class='authorization__input input'
            }}
            {{> input 
                type='password'
                name='password'
                placeholder='Пароль (еще раз)'
                class='authorization__input input'
            }}
            {{> button 
                text='Создать аккаунт' 
                class='authorization__button button'
            }}
            {{> link href="login.hbs" text='Войти'}}
        </div>
    </form>
</section>